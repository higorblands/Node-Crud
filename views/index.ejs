<!DOCTYPE html>
<html>
  <head>
    <title>CRUD de Clientes</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta charset="utf-8" />
  </head>
  <body>
    <h1>Listagem de Clientes</h1>
    <p>Clientes já cadastrados no sistema.</p>
    <table style="width:50%">
      <thead>
        <tr style="background-color: #CCC">
          <td style="width:50%">Nome</td>
          <td style="width:15%">Idade</td>
          <td style="width:15%">UF</td>
          <td style="width:15%">Ações</td>
        </tr>
      </thead>
      <tbody>
        <% if(!docs || docs.length == 0) { %>
          <tr>
            <td colspan="4">Nenhum cliente cadastrado.</td>
          </tr>
<% } else { 
  docs.forEach(function(customers){ %>
    <tr>
      <td style="width:50%"><%= customers.nome %></td>
      <td style="width:15%"><%= customers.idade %></td>
      <td style="width:15%"><%= customers.uf %></td>
      <td style="width:15%"><a href="/edit/<%= customers._id %>">Editar</a>
      <a style="width:15%;padding-left: 22px;" href="/delete/<%= customers._id %>" onclick="return confirm('Tem certeza?');">Excluir</a></td>
    </tr>
  <% }) 
}%>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">
            <a href="/new">Cadastrar Novo</a>
          </td>
        </tr>
      </tfoot>
    </table>
    <script>
      if(location.href.indexOf('delete=true') != -1){
          alert('Cliente excluído com sucesso!');
      }
      else if(location.href.indexOf('edit=true') != -1){
          alert('Cliente editado com sucesso!');
      }
      else if(location.href.indexOf('new=true') != -1){
          alert('Cliente cadastro com sucesso!');
      }
  </script>
  </body>
</html>
